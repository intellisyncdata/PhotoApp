<Page x:Class="DemoPhotoBooth.Pages.Preview.PreviewLayoutPartial"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoPhotoBooth.Pages.Preview"
      mc:Ignorable="d" 
      Title="PreviewLayoutPartial" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
     
        <Grid Name="gridImages" Grid.Row="1" >
            <Image Name="imageBg" Width="{Binding ImageBgWidth}" Height="{Binding ImageBgHeight}"/>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0" Grid.Row="2">
            <Button Name="btnReset" 
                Content="Chọn lại" 
                Width="200"
                Height="70"
                Background="#F4C76E"
                Foreground="White"
                FontSize="20"
                FontWeight="Bold"
                BorderThickness="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,120,0"
                Click="btnReset_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="35" 
                            BorderThickness="0">
                            <TextBlock Text="{TemplateBinding Content}" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   FontWeight="{TemplateBinding FontWeight}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Name="btnPrint" 
                    Content="In ảnh" 
                    Width="200"
                    Height="70"
                    Background="#F4C76E"
                    Foreground="White"
                    FontSize="20"
                    FontWeight="Bold"
                    BorderThickness="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,0"
                    Click="btnPrint_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                CornerRadius="35" 
                BorderThickness="0">
                            <TextBlock Text="{TemplateBinding Content}" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       Foreground="White"
                       FontWeight="{TemplateBinding FontWeight}" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        <!--<TextBlock Name="lblTimer"
                   HorizontalAlignment="Left"
                   TextWrapping="Wrap" 
                   Text="00" 
                   Width="100" 
                Height="70"
                FontSize="48"
                   VerticalAlignment="Top"
        />-->
        <Grid Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,10">
            <!-- Tạo hình tròn -->
            <Ellipse Width="100" Height="100" Fill="#f4c76e"/>

            <!-- Hiển thị số đếm ngược -->
            <TextBlock Name="lblTimer"
            FontSize="28"
            FontWeight="Bold"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
