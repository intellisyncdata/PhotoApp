<Window x:Class="DemoPhotoBooth.Pages.PopupChecking"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression.blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Thông báo"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    Background="#00000000"
    Height="979" Width="1746"
    WindowStyle="None">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Layouts/bg-popup.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="640"/>
        </Grid.RowDefinitions>

        <!-- Nội dung -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0">
            <TextBlock 
            Width="980"
            TextWrapping="Wrap"
            Text="Dữ liệu đang được xử lý, xin vui lòng chờ giây lát!" 
            FontSize="75" 
            Foreground="#5a93cf"
            FontFamily="pack://application:,,,/Layouts/fonts/#Coiny"
            TextAlignment="Center"
            Margin="0,350,0,0"/>
        </StackPanel>
    </Grid>
</Window>
