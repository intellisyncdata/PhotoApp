<Page x:Class="DemoPhotoBooth.Pages.CodeCheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Code Check">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Layouts/main-background.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" 
                BorderThickness="1"
                CornerRadius="200" 
                BorderBrush="#5a93cf" 
                Background="White"
                Padding="10" 
                HorizontalAlignment="Center" 
                Width="1000" 
                Height="500" 
                Margin="0,0,0,0">
            <StackPanel>
                <TextBlock 
                    Text="Nhập mã thiết bị"
                    Foreground="#5a93cf"
                    FontFamily="pack://application:,,,/Layouts/fonts/#Coiny"
                    FontSize="100"
                    HorizontalAlignment="Center"
                    Margin="0,50,0,20" />
                <TextBox x:Name="CodeInput" 
                         Text="PHOTOAPP001"
                         Foreground="#5a93cf"
                         FontSize="57" 
                         HorizontalContentAlignment="Center"
                         FontFamily="pack://application:,,,/Layouts/fonts/#Coiny"
                         FontWeight="Bold"
                         Padding="0"
                         Margin="0,0,0,60"
                         Background="White" Height="80" Width="550" BorderThickness="2" BorderBrush="#5a93cf" />
                <Button Content="XÁC NHẬN" 
                        Name="btnCheckCode"
                        Click="CheckCode_Click" 
                        Width="450" Height="60"
                        Background="#faa2af" Foreground="White"
                        FontSize="37" Margin="0,20,0,0"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Center"
                        HorizontalAlignment="Center"
                        FontFamily="pack://application:,,,/Layouts/fonts/#Coiny"
                        BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                    CornerRadius="30" 
                    BorderThickness="0"
                    Padding="{TemplateBinding Padding}">
                                <Grid>
                                    <TextBlock Text="{TemplateBinding Content}" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                TextAlignment="Center"
                                Foreground="{TemplateBinding Foreground}"
                                FontWeight="{TemplateBinding FontWeight}"
                                FontSize="{TemplateBinding FontSize}"
                                FontFamily="{TemplateBinding FontFamily}"
                                SnapsToDevicePixels="True"
                                Padding="0,15,0,0"/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>

        <!-- Hành động -->
        <StackPanel Grid.Row="1" Margin="0,-30,0,0" HorizontalAlignment="Center">
            <TextBlock Text="Hành Động" 
                       FontFamily="pack://application:,,,/Layouts/fonts/#Coiny"
                       Foreground="#5a93cf"
                       FontSize="40" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="1">
                <Button Content="Đặt lại bộ đếm giấy In"
                    Name="btnResetPrinter"
                    Click="ResetPrinter_Click" 
                    Width="470" Height="70"
                    Background="#faa2af" Foreground="White"
                    FontFamily="pack://application:,,,/Layouts/fonts/#Coiny"
                    FontSize="35" FontWeight="Bold"
                    BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                    CornerRadius="30" 
                    BorderThickness="0">
                                <TextBlock Text="{TemplateBinding Content}" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Foreground="White"
                    FontWeight="{TemplateBinding FontWeight}" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Cập nhật phần mềm"
                    Name="btnUpdate"
                    Click="CheckUpdate_Click" 
                    Width="470" Height="70"
                    FontFamily="pack://application:,,,/Layouts/fonts/#Coiny"
                    Background="#faa2af" 
                    Foreground="White"
                    FontSize="35" 
                    FontWeight="Bold"
                    BorderThickness="0"
                    Margin="20,0,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                CornerRadius="30" 
                                BorderThickness="0">
                                <TextBlock Text="{TemplateBinding Content}" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontWeight="{TemplateBinding FontWeight}" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
