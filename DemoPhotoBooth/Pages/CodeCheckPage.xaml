<Page x:Class="DemoPhotoBooth.Pages.CodeCheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Code Check">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Layouts/main-background.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" 
                BorderThickness="3" CornerRadius="15" BorderBrush="Black" 
                Background="White" Padding="20" HorizontalAlignment="Center" Width="600" Height="250" Margin="0,250,0,0">
            <StackPanel>
                <TextBlock Text="Nhập mã thiết bị" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBox x:Name="CodeInput" 
                         Text="PHOTOAPP001"
                         FontSize="26" 
                         FontFamily="Consolas"
                         FontWeight="Bold"
                         Padding="10"
                         Background="White" Height="60" Width="450" BorderThickness="2" BorderBrush="Black" />
                <Button Content="Xác nhận" 
                        Name="btnCheckCode"
                        Click="CheckCode_Click" 
                        Width="450" Height="70"
                        Background="#FFC857" Foreground="Black"
                        FontSize="26" FontWeight="Bold" Margin="0,10,0,0"
                        BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                CornerRadius="35" 
                                BorderThickness="0">
                                <TextBlock Text="{TemplateBinding Content}" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                Foreground="White"
                                FontWeight="{TemplateBinding FontWeight}" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>

        <!-- Hành động -->
        <StackPanel Grid.Row="1" Margin="0,10,0,10" HorizontalAlignment="Center">
            <TextBlock Text="Hành Động" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="1">
                <Button Content="Đặt lại bộ đếm giấy In"
                    Name="btnResetPrinter"
                    Click="ResetPrinter_Click" 
                    Width="450" Height="70"
                    Background="#FFC857" Foreground="Black"
                    FontSize="26" FontWeight="Bold"
                    BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                    CornerRadius="35" 
                    BorderThickness="0">
                                <TextBlock Text="{TemplateBinding Content}" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Foreground="White"
                    FontWeight="{TemplateBinding FontWeight}" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Update"
                    Name="btnUpdate"
                    Click="CheckUpdate_Click" 
                    Width="450" Height="70"
                    Background="#FFC857" 
                    Foreground="Black"
                    FontSize="26" 
                    FontWeight="Bold"
                    BorderThickness="0"
                        Margin="20,0,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                CornerRadius="35" 
                                BorderThickness="0">
                                <TextBlock Text="{TemplateBinding Content}" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontWeight="{TemplateBinding FontWeight}" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
