<Page x:Class="DemoPhotoBooth.Pages.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression.blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoPhotoBooth.Pages"
        mc:Ignorable="d"
        Title="HomePage" Height="Auto" Width="Auto" Loaded="Window_Loaded" LayoutUpdated="Window_LayoutUpdated">

    <!-- Grid chứa toàn bộ nội dung -->
    <Grid MouseDown="StartApi_Click" TouchDown="StartApi_Click">
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Layouts/background.png"/>
        </Grid.Background>
        <!-- Hiển thị chữ "CHẠM ĐỂ BẮT ĐẦU" với hiệu ứng nhấp nháy -->
        <TextBlock x:Name="StartText"
                   Text="CHẠM ĐỂ BẮT ĐẦU"
                   FontSize="26"
                   FontWeight="SemiBold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,0,0,20"
                   TextAlignment="Center">
            <TextBlock.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </TextBlock.RenderTransform>
            <TextBlock.Triggers>
                <!-- Hiệu ứng nhấp nháy -->
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="1.0" To="0.3"
                                             Duration="0:0:1"
                                             AutoReverse="True"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </TextBlock.Triggers>
        </TextBlock>
    </Grid>
</Page>
