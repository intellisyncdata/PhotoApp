<Application x:Class="DemoPhotoBooth.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:common="clr-namespace:DemoPhotoBooth.Common"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
            <!-- Custom ScrollBar Style -->
            <Style x:Key="CustomScrollBarStyle" TargetType="ScrollBar">
                <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <!-- Kênh cuộn -->
                            <Border Background="#ECEFF1" 
                                CornerRadius="6" 
                                Margin="2"/>
                            <!-- Thanh cuộn -->
                            <Track Name="PART_Track" 
                               VerticalAlignment="Stretch" 
                               HorizontalAlignment="Stretch">
                                <!-- Nút giảm cuộn -->
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton>
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="#ffe6f2" 
                                                    CornerRadius="6" 
                                                    Margin="2" />
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <!-- Nút tăng cuộn -->
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton>
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="#ffe6f2" 
                                                    CornerRadius="6" 
                                                    Margin="2" />
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <!-- Thumb (thanh kéo) -->
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#f4c76e" 
                                                    CornerRadius="6" 
                                                    Margin="2" />
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <common:BoolToBorderThicknessConverter x:Key="BoolToBorderThicknessConverter"/>
        <common:PlaceholderVisibilityConverter x:Key="PlaceholderVisibilityConverter"/>
        <common:ImageVisibilityConverter x:Key="ImageVisibilityConverter"/>
    </Application.Resources>
</Application>